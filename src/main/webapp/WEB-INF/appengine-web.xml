<?xml version="1.0" encoding="utf-8"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
    
    <application>maddock-wedding</application>
    <version>1</version>

    <!-- allows GAE to send multiple requests to one instance in parallel -->
    <threadsafe>true</threadsafe>

    <sessions-enabled>true</sessions-enabled>
    
    <system-properties>
        <property name="java.util.logging.config.file" value="WEB-INF/classes/logging/gae/logging.properties"/>
        <property name="spring.profiles.active" value="gae"/>
    </system-properties>

    <resource-files>
        <include path="/resources/css/**.css" />
        <include path="/resources/js/**.js" />
        <include path="/resources/images/favicon.ico" />
        <include path="/resources/images/**.jpg" />
        <include path="/resources/images/**.jpeg" />
        <include path="/resources/images/**.png" />
    </resource-files>
    
</appengine-web-app>
